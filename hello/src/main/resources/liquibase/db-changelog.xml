    		<column name="duration" type ="datetime"></column>
    	</createTable>
    	<addForeignKeyConstraint constraintName="idStart" referencedTableName="stations" baseColumnNames="idStart" baseTableName="routes" referencedColumnNames="id"/>
    	<addForeignKeyConstraint constraintName="idEnd" referencedTableName="stations" baseColumnNames="idEnd" baseTableName="routes" referencedColumnNames="id"/>
    </changeSet>
    
    <changeSet id="6" author="Cristian">
